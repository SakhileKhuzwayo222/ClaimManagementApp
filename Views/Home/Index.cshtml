@{
    ViewBag.Title = "Welcome to Claim Management App";
}

<main class="container mt-5">
    <section class="text-center mb-5" aria-labelledby="appTitle">
        <h1 id="title" class="display-4">Welcome to Claim Management App</h1>
        <p class="lead text-muted">Manage your claims efficiently with our intuitive platform.</p>
        <p>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">Get Started &raquo;</a>
        </p>
    </section>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card border-light shadow-sm">
                <div class="card-body">
                    <h2 class="card-title">Getting Started</h2>
                    <p class="card-text">
                        To begin, create an account and log in to submit your claims and track their status.
                    </p>
                    <p>
                        <a class="btn btn-outline-primary" href="@Url.Action("Register", "Account")">Create an Account &raquo;</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-light shadow-sm">
                <div class="card-body">
                    <h2 class="card-title">Features</h2>
                    <p class="card-text">
                        Explore various features such as claim submission, tracking, and management tools.
                    </p>
                    <p>
                        <a class="btn btn-outline-primary" href="@Url.Action("Index", "Dashboard")">View Features &raquo;</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-light shadow-sm">
                <div class="card-body">
                    <h2 class="card-title">Support</h2>
                    <p class="card-text">
                        If you need assistance, check out our support resources or contact our team.
                    </p>
                    <p>
                        <a class="btn btn-outline-primary" href="@Url.Action("Support", "Home")">Get Support &raquo;</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    /* Custom styles for better visuals */
    body {
        background-color: #f8f9fa;
    }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.02);
        }
</style>

